<section class="section founders-section" id="story">
  <div class="container">
    <div class="founders-intro">
      <h2 class="founders-headline">Built for the exact problems we <span class="gradient-text">faced.</span></h2>
    </div>

    <div class="story-grid">
      
      <!-- Left side: Photo Placeholder -->
      <div class="story-visual group">
        <div class="photo-placeholder glass-panel">
          <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" class="photo-icon" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><circle cx="8.5" cy="8.5" r="1.5"></circle><polyline points="21 15 16 10 5 21"></polyline></svg>
          <span class="photo-label muted">Team Photo Placeholder</span>
          <div class="photo-glow"></div>
        </div>
      </div>

      <!-- Right side: Origin Story & Founder Bios -->
      <div class="story-content">
        <div class="founders-signatures">
          <div class="signature-block">
            <h4 class="founder-name">Thue Tonnesen</h4>
            <span class="founder-role muted">Infrastructure</span>
            <div class="founder-socials">
              <a href="https://www.linkedin.com/in/thue-tonnesen-414475245/" target="_blank" rel="noopener noreferrer" class="social-link muted">LinkedIn</a>
              <a href="https://github.com/Thue-T" target="_blank" rel="noopener noreferrer" class="social-link muted">GitHub</a>
            </div>
            <p class="story-text mt-4">
              "Server architect who built infrastructure processing 14,000+ emails."
            </p>
          </div>
          
          <div class="signature-block">
            <h4 class="founder-name">Joachim Gensmann</h4>
            <span class="founder-role muted">Strategy</span>
            <div class="founder-socials">
              <a href="https://www.linkedin.com/in/joachim-gensmann/" target="_blank" rel="noopener noreferrer" class="social-link muted">LinkedIn</a>
            </div>
            <p class="story-text mt-4">
              "Product thinker who ensures Ordomation solves real problems."
            </p>
          </div>
        </div>
        
        <hr class="story-divider" />

        <p class="story-text highlight">
          "Friends since HTX Haderslev. We saw small businesses struggle with manual processes that big companies automate away. Ordomation is our answer."
        </p>
      </div>

    </div>
  </div>
</section>

<style>
  .founders-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
    position: relative;
    overflow: hidden;
  }

  .founders-intro {
    margin-bottom: var(--space-3xl);
  }

  .founders-headline {
    font-size: clamp(36px, 5vw, 56px);
    max-width: 600px;
    line-height: 1.1;
  }

  .story-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 80px;
    align-items: center;
  }

  /* Photo Placeholder */
  .story-visual {
    position: relative;
  }

  .photo-placeholder {
    aspect-ratio: 4/3;
    width: 100%;
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
    position: relative;
    overflow: hidden;
    /* initial state for GSAP */
    opacity: 0;
    transform: x(-30px);
  }

  .photo-icon {
    color: var(--text-muted);
    opacity: 0.5;
    transition: transform 0.5s ease;
  }

  .photo-placeholder:hover .photo-icon {
    transform: scale(1.1);
    color: var(--accent);
    opacity: 1;
  }

  .photo-label {
    text-transform: uppercase;
    letter-spacing: 0.1em;
    font-size: 14px;
  }

  .photo-glow {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at center, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .photo-placeholder:hover .photo-glow {
    opacity: 1;
  }

  /* Story Content */
  .story-content {
    /* initial state for GSAP */
    opacity: 0;
    transform: x(30px);
  }

  .story-text {
    font-size: 18px;
    line-height: 1.7;
    color: var(--text-secondary);
    margin-bottom: var(--space-lg);
  }

  .story-text.highlight {
    color: var(--text-primary);
    font-weight: 500;
    font-size: 20px;
    border-left: 2px solid var(--accent);
    padding-left: var(--space-md);
    margin-top: var(--space-xl);
  }

  .founders-signatures {
    display: flex;
    gap: var(--space-2xl);
    margin-bottom: var(--space-2xl);
  }

  .signature-block {
    flex: 1;
  }

  .founder-name {
    font-size: 18px;
    margin: 0 0 4px 0;
    color: var(--text-primary);
  }

  .founder-role {
    font-size: 14px;
    display: block;
    margin-bottom: var(--space-sm);
  }

  .founder-socials {
    display: flex;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
  }

  .social-link {
    font-size: 14px;
    text-decoration: underline;
    transition: color 0.2s;
  }
  
  .social-link:hover {
    color: var(--accent);
  }

  .story-divider {
    border: none;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    margin: var(--space-2xl) 0;
  }

  .mt-4 { margin-top: 1rem; }

  @media (max-width: 900px) {
    .story-grid {
      grid-template-columns: 1fr;
      gap: var(--space-2xl);
    }
    
    .founders-headline {
      text-align: center;
      margin: 0 auto var(--space-2xl);
    }

    .founders-signatures {
      flex-direction: column;
      gap: var(--space-md);
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  document.addEventListener('DOMContentLoaded', () => {
    gsap.registerPlugin(ScrollTrigger);

    const tl = gsap.timeline({
      scrollTrigger: {
        trigger: '.story-grid',
        start: 'top 75%',
      }
    });

    tl.to('.photo-placeholder', {
      opacity: 1,
      x: 0,
      duration: 1,
      ease: 'power3.out'
    })
    .to('.story-content', {
      opacity: 1,
      x: 0,
      duration: 1,
      ease: 'power3.out'
    }, "-=0.6");
  });
</script>
