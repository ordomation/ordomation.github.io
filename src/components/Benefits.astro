<section class="section benefits-section">
  <div class="container">
    <div class="benefits-grid">
      
      <!-- Card 1: Time -->
      <div class="benefit-card glass-panel" id="benefit-1">
        <div class="benefit-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <!-- Hand animates -->
            <path d="M12 6v6l4 2" class="clock-hand"></path>
          </svg>
        </div>
        <div class="benefit-metric gradient-text">8 <span class="metric-unit">hrs</span></div>
        <h3 class="benefit-title">TIME</h3>
        <p class="benefit-desc muted">8 hours back every month. That's a full workday for your business, not your inbox.</p>
      </div>

      <!-- Card 2: Clarity -->
      <div class="benefit-card glass-panel" id="benefit-2">
        <div class="benefit-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="3 3 3 21 21 21"></polyline>
            <!-- Graph line animates -->
            <polyline points="3 16 9 10 14 14 21 5" class="graph-line"></polyline>
          </svg>
        </div>
        <div class="benefit-metric gradient-text"><svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="url(#blue-purple-gradient)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><defs><linearGradient id="blue-purple-gradient" x1="0%" y1="0%" x2="100%" y2="0%"><stop offset="0%" stop-color="#3b82f6" /><stop offset="100%" stop-color="#8b5cf6" /></linearGradient></defs><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg></div>
        <h3 class="benefit-title">CLARITY</h3>
        <p class="benefit-desc muted">One dashboard. Every invoice. Every receipt. Search by date, amount, or supplier instantly.</p>
      </div>

      <!-- Card 3: Control -->
      <div class="benefit-card glass-panel" id="benefit-3">
        <div class="benefit-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <circle cx="12" cy="12" r="10"></circle>
            <circle cx="12" cy="12" r="6" class="target-pulse"></circle>
            <circle cx="12" cy="12" r="2"></circle>
            <line x1="12" y1="2" x2="12" y2="4"></line>
            <line x1="12" y1="20" x2="12" y2="22"></line>
            <line x1="20" y1="12" x2="22" y2="12"></line>
            <line x1="2" y1="12" x2="4" y2="12"></line>
          </svg>
        </div>
        <div class="benefit-metric gradient-text">10 <span class="metric-unit">min</span></div>
        <h3 class="benefit-title">CONTROL</h3>
        <p class="benefit-desc muted">Quarterly VAT prep in 10 minutes, not 10 hours. Your accountant will thank you.</p>
      </div>

    </div>
  </div>
</section>

<style>
  .benefits-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
  }

  .benefits-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-lg);
  }

  .benefit-card {
    padding: var(--space-xl);
    border-radius: 24px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    background: rgba(26, 26, 26, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.03);
    /* GSAP will animate initial opacity */
  }

  .benefit-card:hover {
    transform: translateY(-8px) scale(1.02);
    border-color: rgba(99, 102, 241, 0.3); /* Uses primary gradient color */
    box-shadow: 0 20px 40px -10px rgba(0,0,0,0.5), 
                0 0 20px -5px rgba(99, 102, 241, 0.2);
    background: rgba(30, 30, 30, 0.6);
  }

  .benefit-icon {
    margin-bottom: var(--space-lg);
    color: var(--accent);
    background: rgba(59, 130, 246, 0.1);
    width: 80px;
    height: 80px;
    border-radius: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .benefit-card:hover .benefit-icon {
    color: var(--text-primary);
    background: linear-gradient(135deg, var(--gradient-1), var(--gradient-2));
    box-shadow: 0 10px 20px -5px rgba(99, 102, 241, 0.4);
  }

  .benefit-title {
    margin-bottom: var(--space-sm);
    letter-spacing: 0.05em;
    text-transform: uppercase;
    font-size: 16px;
    color: var(--text-primary);
  }

  .benefit-desc {
    font-size: 16px;
    line-height: 1.6;
    margin-bottom: 0;
  }

  .benefit-metric {
    font-size: clamp(36px, 4vw, 48px);
    font-weight: 700;
    margin-bottom: var(--space-xs);
    line-height: 1;
    display: flex;
    align-items: baseline;
    gap: 4px;
    background: linear-gradient(135deg, #ffffff 0%, #a3a3a3 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    color: transparent;
  }

  .metric-unit {
    font-size: 20px;
    font-weight: 500;
    color: var(--accent);
    -webkit-text-fill-color: var(--accent);
  }

  /* SVG Animation preparation */
  .graph-line {
    stroke-dasharray: 100;
    stroke-dashoffset: 100;
  }

  @media (max-width: 1024px) {
    .benefits-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .benefits-grid {
      grid-template-columns: 1fr;
    }
    .benefit-card {
      padding: var(--space-lg);
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  document.addEventListener('DOMContentLoaded', () => {
    gsap.registerPlugin(ScrollTrigger);

    // Staggered fade in for cards
    gsap.from(".benefit-card", {
      scrollTrigger: {
        trigger: ".benefits-grid",
        start: "top 80%",
      },
      y: 40,
      opacity: 0,
      duration: 0.8,
      stagger: 0.2,
      ease: "power3.out"
    });

    // Icon Animations

    // 1. Clock spin
    gsap.to(".clock-hand", {
      scrollTrigger: {
        trigger: "#benefit-1",
        start: "top 75%",
      },
      rotation: 360,
      transformOrigin: "center center",
      duration: 1.5,
      ease: "power2.inOut"
    });

    // 2. Graph draw
    gsap.to(".graph-line", {
      scrollTrigger: {
        trigger: "#benefit-2",
        start: "top 75%",
      },
      strokeDashoffset: 0,
      duration: 1.5,
      ease: "power2.out"
    });

    // 3. Target pulse
    gsap.to(".target-pulse", {
      scrollTrigger: {
        trigger: "#benefit-3",
        start: "top 75%",
      },
      scale: 1.5,
      opacity: 0,
      transformOrigin: "center center",
      duration: 1.5,
      repeat: 1, // pulses twice
      yoyo: true,
      ease: "power1.inOut"
    });
  });
</script>
