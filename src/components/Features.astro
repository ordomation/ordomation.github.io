<section class="section features-section" id="features">
  <div class="container features-container">
    <div class="features-header">
      <h2>Everything you need to <span class="gradient-text">automate.</span></h2>
      <p class="features-subtitle muted">Built specifically for the Danish SME ecosystem.</p>
    </div>

    <div class="bento-grid">
      
      <!-- Feature 1: Large Card (Spans 2 columns) -->
      <div class="bento-card bento-large glass-panel feature-card">
        <div class="bento-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M14.5 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7.5L14.5 2z"></path><polyline points="14 2 14 8 20 8"></polyline><path d="m9 15 2 2 4-4"></path></svg>
        </div>
        <div class="bento-content">
          <h3>Intelligent Data Extraction</h3>
          <p class="muted">Our models are trained to instantly identify VAT, total amounts, dates, and supplier information with near-perfect accuracy, regardless of the template format.</p>
        </div>
        <!-- Decorative bg glow -->
        <div class="bento-glow"></div>
      </div>

      <!-- Feature 2: Smart Folder Structure -->
      <div class="bento-card glass-panel feature-card">
        <div class="bento-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" class="icon" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"></path></svg>
        </div>
        <div class="bento-content">
          <h3>Smart Organisation</h3>
          <p class="muted">Filenames are automatically rewritten to `YYYY-MM-DD_Vendor_AmountDKK.pdf`.</p>
        </div>
      </div>

      <!-- Feature 3: SKAT-ready Format -->
      <div class="bento-card glass-panel feature-card">
        <div class="bento-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="3" y1="9" x2="21" y2="9"></line><line x1="9" y1="21" x2="9" y2="9"></line></svg>
        </div>
        <div class="bento-content">
          <h3>SKAT-ready Format</h3>
          <p class="muted">Generate accounting-ready Excel files mapped precisely to the Danish standard headings.</p>
        </div>
      </div>

      <!-- Feature 4: Any File Type -->
      <div class="bento-card glass-panel feature-card">
        <div class="bento-icon">
           <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="16 3 21 8 8 21 3 21 3 16 16 3"></polygon></svg>
        </div>
        <div class="bento-content">
          <h3>Any File Type</h3>
          <p class="muted">PDFs, JPEGs, PNGs, and blurry taxi receipts. We process them all seamlessly.</p>
        </div>
      </div>

      <!-- Feature 5: Secure Vault -->
      <div class="bento-card glass-panel feature-card">
        <div class="bento-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
        </div>
        <div class="bento-content">
          <h3>Secure Cloud Vault</h3>
          <p class="muted">Bank-grade encryption ensures your sensitive financial documents are never exposed.</p>
        </div>
      </div>

      <!-- Feature 6: Instant Delivery (Spans 2 columns) -->
      <div class="bento-card bento-large-bottom glass-panel feature-card">
        <div class="bento-icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="13 2 3 14 12 14 11 22 21 10 12 10 13 2"></polygon></svg>
        </div>
        <div class="bento-content">
          <h3>Instant Delivery</h3>
          <p class="muted">Send an email, tab back to your accountant window, and your organized files are already waiting for you in Dropbox or Google Drive.</p>
        </div>
        <div class="bento-glow"></div>
      </div>

    </div>
  </div>
</section>

<style>
  .features-section {
    padding: 120px 0;
    background-color: var(--bg-primary);
  }

  .features-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }

  .features-subtitle {
    margin-top: var(--space-md);
    font-size: clamp(16px, 2vw, 20px);
  }

  .bento-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    grid-template-rows: auto auto auto;
    gap: var(--space-lg);
    max-width: 1000px;
    margin: 0 auto;
  }

  /* Specific Card Layouts */
  .bento-large {
    grid-column: span 2;
    grid-row: span 1;
  }

  .bento-large-bottom {
    grid-column: 2 / span 2;
    grid-row: span 1;
  }

  .bento-card {
    padding: var(--space-xl);
    border-radius: 20px;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: var(--space-lg);
    position: relative;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    /* GSAP init state */
    opacity: 0;
    transform: translateY(30px);
  }

  .bento-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 40px -10px rgba(0,0,0,0.5),
                0 0 0 1px rgba(139, 92, 246, 0.3) inset;
  }

  .bento-icon {
    width: 48px;
    height: 48px;
    border-radius: 12px;
    background: rgba(255, 255, 255, 0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--accent);
    border: 1px solid rgba(255, 255, 255, 0.05);
    z-index: 2;
  }

  .bento-content {
    z-index: 2;
  }

  .bento-content h3 {
    font-size: 20px;
    margin-bottom: 8px;
    color: var(--text-primary);
  }

  .bento-content p {
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
  }

  /* Decorative Glows for large cards */
  .bento-glow {
    position: absolute;
    top: -50px;
    right: -50px;
    width: 200px;
    height: 200px;
    background: radial-gradient(circle, rgba(139, 92, 246, 0.15) 0%, transparent 70%);
    border-radius: 50%;
    z-index: 1;
    pointer-events: none;
    transition: opacity 0.3s ease;
    opacity: 0.5;
  }

  .bento-card:hover .bento-glow {
    opacity: 1;
  }

  .bento-large-bottom .bento-glow {
    top: auto;
    bottom: -50px;
    left: -50px;
    right: auto;
    background: radial-gradient(circle, rgba(59, 130, 246, 0.15) 0%, transparent 70%);
  }

  /* Responsive Adjustments */
  @media (max-width: 900px) {
    .bento-grid {
      grid-template-columns: repeat(2, 1fr);
    }
    .bento-large, .bento-large-bottom {
      grid-column: span 2;
    }
  }

  @media (max-width: 600px) {
    .bento-grid {
      grid-template-columns: 1fr;
    }
    .bento-large, .bento-large-bottom {
      grid-column: span 1;
    }
  }
</style>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';

  document.addEventListener('DOMContentLoaded', () => {
    gsap.registerPlugin(ScrollTrigger);

    gsap.to('.feature-card', {
      scrollTrigger: {
        trigger: '.bento-grid',
        start: 'top 80%',
      },
      y: 0,
      opacity: 1,
      duration: 0.7,
      stagger: 0.1,
      ease: 'power3.out'
    });
  });
</script>
