<style>
  .footer {
    background-color: var(--midnight);
    color: var(--white);
    padding-top: 64px;
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--space-xl);
  }

  .footer-left {
    display: flex;
    flex-direction: column;
  }

  .footer-logo {
    font-weight: 700;
    font-size: 24px;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-xs);
  }

  .footer-tagline {
    color: var(--slate);
    margin-bottom: 0;
  }

  .footer-right {
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--space-md);
  }

  .footer-info {
    text-align: right;
  }

  .footer-link {
    color: var(--white);
    text-decoration: none;
    display: block;
    margin-bottom: 4px;
    transition: color 0.2s;
  }

  .footer-link:hover {
    color: var(--electric);
  }

  .footer-location {
    color: var(--slate);
    margin-bottom: 0;
  }

  .footer-social {
    display: flex;
    gap: var(--space-md);
  }

  .footer-social a {
    color: var(--slate);
    transition: color 0.2s;
  }

  .footer-social a:hover {
    color: var(--white);
  }

  .footer-bottom {
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    padding: var(--space-md) 0;
    text-align: center;
    color: var(--slate);
    font-size: 14px;
  }
  
  .footer-bottom p {
    margin-bottom: 0;
  }

  @media (max-width: 640px) {
    .footer-content {
      flex-direction: column;
      gap: var(--space-xl);
    }
    
    .footer-right {
      align-items: flex-start;
    }
    
    .footer-info {
      text-align: left;
    }
  }
</style>
