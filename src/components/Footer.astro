<footer class="footer-section">
  <div class="container">
    <div class="footer-layout">
      <!-- Left Column -->
      <div class="footer-brand">
        <h2 class="footer-logo">ORDOMATION</h2>
        <p class="footer-copyright muted">&copy; 2026</p>
      </div>

      <!-- Right Column -->
      <div class="footer-links">
