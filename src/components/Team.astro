<style>
  .team-section {
    padding: 96px 0;
  }

  .team-grid {
    display: flex;
    justify-content: center;
    gap: 64px;
    margin-bottom: var(--space-2xl);
  }

  .team-card {
    max-width: 350px;
    width: 100%;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .team-photo {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    background-color: var(--cloud);
    border: 4px solid var(--white);
    box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: var(--space-md);
  }

  .photo-initials {
    font-size: 48px;
    font-weight: 700;
    color: var(--slate);
  }

  .team-name {
    margin-bottom: var(--space-xs);
  }

  .team-role {
    color: var(--electric);
    font-weight: 500;
    margin-bottom: var(--space-sm);
    font-size: 16px;
  }

  .team-bio {
    color: var(--slate);
    font-size: 16px;
    margin-bottom: var(--space-lg);
    flex-grow: 1;
  }

  .team-links {
    display: flex;
    gap: var(--space-md);
    font-size: 15px;
    font-weight: 500;
  }

  .team-links a {
    color: var(--slate);
  }

  .team-links a:hover {
    color: var(--electric);
  }

  .team-story {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
    background-color: var(--cloud);
    padding: var(--space-lg) var(--space-xl);
    border-radius: 16px;
  }

  .team-story p {
    margin-bottom: 0;
    font-size: 18px;
    color: var(--slate);
    font-style: italic;
  }

  @media (max-width: 768px) {
    .team-grid {
      flex-direction: column;
      align-items: center;
      gap: var(--space-xl);
    }
    
    .team-story {
      padding: var(--space-md);
    }
  }
</style>
